<div class="min-h-screen bg-gray-100 flex flex-col">
  <header class="bg-white shadow-sm px-6 py-4">
    <div class="max-w-6xl mx-auto flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900"><%= @slide.title %></h1>
      <div class="flex items-center space-x-4 text-sm text-gray-600">
        <span><%= @slide.published_at.strftime("%Y年%m月%d日") %></span>
        <span class="font-medium"><%= @slide_page.position %> / <%= @slide.page_count %></span>
      </div>
    </div>
  </header>
  
  <main class="flex-1 flex items-center justify-center p-8">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-4xl aspect-[16/9] flex items-center justify-center p-12">
      <div class="slide-content prose prose-lg max-w-none" data-slide-viewer-target="content">
        <%= sanitize @slide_page.content, tags: %w[p br h1 h2 h3 h4 h5 h6 ul ol li a strong em code pre blockquote img span div table thead tbody tr th td], attributes: %w[href src alt class id target rel] %>
      </div>
    </div>
  </main>
  
  <nav class="bg-white shadow-sm px-6 py-2">
    <div class="max-w-6xl mx-auto flex items-center justify-between">
      <% unless @slide_page.first? %>
        <%= link_to slide_path(@slide, page: @slide_page.position - 1), 
            class: "inline-flex items-center px-3 py-1.5 bg-gray-200 hover:bg-gray-300 rounded-lg transition-colors text-sm",
            data: { turbo_frame: "_top" } do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          前へ
        <% end %>
      <% else %>
        <div></div>
      <% end %>
      
      <% unless @slide_page.last? %>
        <%= link_to slide_path(@slide, page: @slide_page.position + 1), 
            class: "inline-flex items-center px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors text-sm",
            data: { turbo_frame: "_top" } do %>
          次へ
          <svg class="w-4 h-4 ml-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      <% else %>
        <div></div>
      <% end %>
    </div>
  </nav>
</div>