<% content_for(:title) { "ダッシュボード" } %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-zinc-900">ダッシュボード</h1>
</div>

<!-- サマリーカード -->
<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- 今月の稼働率 -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <% rate = @availability.current_rate %>
        <% bg_color = rate >= 100 ? "bg-red-500" : rate >= 80 ? "bg-orange-500" : rate >= 50 ? "bg-yellow-500" : "bg-green-500" %>
        <div class="h-12 w-12 rounded-full <%= bg_color %> flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-zinc-500">今月の稼働率</p>
        <p class="text-2xl font-semibold text-zinc-900"><%= rate %>%</p>
      </div>
    </div>
  </div>

  <!-- 今月の工数 -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="h-12 w-12 rounded-full bg-indigo-500 flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-zinc-500">今月の工数</p>
        <p class="text-2xl font-semibold text-zinc-900"><%= number_with_precision(@current_month_total_hours, precision: 1) %>h</p>
      </div>
    </div>
  </div>

  <!-- アクティブ案件数 -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="h-12 w-12 rounded-full bg-teal-500 flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-zinc-500">アクティブ案件</p>
        <p class="text-2xl font-semibold text-zinc-900"><%= @active_projects.count %></p>
      </div>
    </div>
  </div>

  <!-- ステータス -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <div class="h-12 w-12 rounded-full bg-zinc-500 flex items-center justify-center">
          <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-zinc-500">ステータス</p>
        <p class="text-2xl font-semibold text-zinc-900"><%= @availability.status %></p>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <!-- 今後3カ月の稼働予定 -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-zinc-900 mb-4">今後3カ月の稼働予定</h2>
    <div class="space-y-4">
      <% @availability.monthly_availability.each do |entry| %>
        <% rate = entry[:rate] %>
        <% text_color = rate >= 100 ? "text-red-600" : rate >= 80 ? "text-orange-600" : rate >= 50 ? "text-yellow-600" : "text-green-600" %>
        <% bg_color = rate >= 100 ? "bg-red-500" : rate >= 80 ? "bg-orange-500" : rate >= 50 ? "bg-yellow-500" : "bg-green-500" %>
        <div>
          <div class="flex items-center justify-between text-sm mb-1">
            <span class="text-zinc-600"><%= entry[:month_label] %></span>
            <span class="font-medium <%= text_color %>"><%= rate %>%</span>
          </div>
          <div class="w-full bg-zinc-200 rounded-full h-2">
            <div class="<%= bg_color %> h-2 rounded-full" style="width: <%= rate %>%"></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- アクティブ案件 -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-medium text-zinc-900">アクティブ案件</h2>
      <%= link_to "すべて見る", admin_work_hour_projects_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
    </div>
    <% if @active_projects.any? %>
      <ul class="divide-y divide-zinc-200">
        <% @active_projects.limit(5).each do |project| %>
          <li class="py-3">
            <div class="flex items-center">
              <div class="w-3 h-3 rounded-full mr-3" style="background-color: <%= project.color %>"></div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-zinc-900 truncate"><%= project.name %></p>
                <p class="text-sm text-zinc-500"><%= project.client&.name || "クライアントなし" %></p>
              </div>
              <%= link_to admin_work_hour_project_path(project), class: "text-indigo-600 hover:text-indigo-500" do %>
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-zinc-500">アクティブな案件はありません</p>
    <% end %>
  </div>

  <!-- 最近の工数登録 -->
  <div class="bg-white shadow rounded-lg p-6 lg:col-span-2">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-lg font-medium text-zinc-900">最近の工数登録</h2>
      <%= link_to "すべて見る", admin_work_hour_work_entries_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
    </div>
    <% if @recent_work_entries.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-zinc-200">
          <thead>
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-zinc-500 uppercase">日付</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-zinc-500 uppercase">案件</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-zinc-500 uppercase">作業内容</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-zinc-500 uppercase">工数</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-zinc-200">
            <% @recent_work_entries.each do |entry| %>
              <tr>
                <td class="px-4 py-3 text-sm text-zinc-900 whitespace-nowrap"><%= entry.worked_on.strftime("%m/%d") %></td>
                <td class="px-4 py-3 text-sm">
                  <% if entry.project %>
                    <span class="inline-flex items-center">
                      <span class="w-2 h-2 rounded-full mr-2" style="background-color: <%= entry.project.color %>"></span>
                      <span class="text-zinc-900"><%= entry.project.name %></span>
                    </span>
                  <% else %>
                    <span class="text-zinc-500">その他</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 text-sm text-zinc-500 truncate max-w-xs"><%= entry.description || "-" %></td>
                <td class="px-4 py-3 text-sm text-zinc-900 text-right whitespace-nowrap"><%= number_with_precision(entry.hours, precision: 1) %>h</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-zinc-500">工数登録はありません</p>
    <% end %>
  </div>
</div>

<!-- クイックリンク -->
<div class="mt-8">
  <h2 class="text-lg font-medium text-zinc-900 mb-4">クイックアクション</h2>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
    <%= link_to new_admin_work_hour_work_entry_path, class: "flex items-center p-4 bg-white shadow rounded-lg hover:bg-zinc-50 transition-colors" do %>
      <svg class="h-8 w-8 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      <span class="ml-3 text-sm font-medium text-zinc-900">工数を登録</span>
    <% end %>
    <%= link_to new_admin_work_hour_project_path, class: "flex items-center p-4 bg-white shadow rounded-lg hover:bg-zinc-50 transition-colors" do %>
      <svg class="h-8 w-8 text-teal-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <span class="ml-3 text-sm font-medium text-zinc-900">案件を追加</span>
    <% end %>
    <%= link_to admin_work_hour_csv_index_path, class: "flex items-center p-4 bg-white shadow rounded-lg hover:bg-zinc-50 transition-colors" do %>
      <svg class="h-8 w-8 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
      </svg>
      <span class="ml-3 text-sm font-medium text-zinc-900">CSVインポート</span>
    <% end %>
    <%= link_to export_work_entries_admin_work_hour_csv_index_path(start_month: @current_month.strftime("%Y-%m"), end_month: @current_month.strftime("%Y-%m")), class: "flex items-center p-4 bg-white shadow rounded-lg hover:bg-zinc-50 transition-colors" do %>
      <svg class="h-8 w-8 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
      </svg>
      <span class="ml-3 text-sm font-medium text-zinc-900">今月のCSVエクスポート</span>
    <% end %>
  </div>
</div>
