<% content_for(:title) { "CSVインポート/エクスポート" } %>

<div class="mb-6">
  <h1 class="text-2xl font-bold text-zinc-900">CSVインポート/エクスポート</h1>
</div>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <!-- 案件インポート -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-zinc-900 mb-4">案件インポート</h2>
    <p class="text-sm text-zinc-500 mb-4">freee工数管理からエクスポートした案件CSVをインポートします。</p>
    <%= form_with url: import_projects_admin_work_hour_csv_index_path, method: :post, multipart: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.file_field :file, accept: ".csv", class: "block w-full text-sm text-zinc-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      </div>
      <%= form.submit "インポート", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <% end %>
  </div>

  <!-- 工数実績インポート -->
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-zinc-900 mb-4">工数実績インポート</h2>
    <p class="text-sm text-zinc-500 mb-4">freee工数管理からエクスポートした工数実績CSVをインポートします。</p>
    <%= form_with url: import_work_entries_admin_work_hour_csv_index_path, method: :post, multipart: true, class: "space-y-4" do |form| %>
      <div>
        <%= form.file_field :file, accept: ".csv", class: "block w-full text-sm text-zinc-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
      </div>
      <%= form.submit "インポート", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <% end %>
  </div>

  <!-- 工数実績エクスポート -->
  <div class="bg-white shadow rounded-lg p-6 lg:col-span-2">
    <h2 class="text-lg font-medium text-zinc-900 mb-4">工数実績エクスポート</h2>
    <p class="text-sm text-zinc-500 mb-4">指定期間の工数実績をCSVでダウンロードします。</p>
    <%= form_with url: export_work_entries_admin_work_hour_csv_index_path, method: :get, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
        <div>
          <%= form.label :start_month, "開始月", class: "block text-sm font-medium text-zinc-700" %>
          <%= form.month_field :start_month, value: Date.current.beginning_of_month.strftime("%Y-%m"), class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= form.label :end_month, "終了月", class: "block text-sm font-medium text-zinc-700" %>
          <%= form.month_field :end_month, value: Date.current.end_of_month.strftime("%Y-%m"), class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
        <div>
          <%= form.label :project_id, "案件", class: "block text-sm font-medium text-zinc-700" %>
          <%= form.collection_select :project_id, ::WorkHour::Project.order(:name), :id, :name, { include_blank: "全件" }, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
        </div>
      </div>
      <%= form.submit "ダウンロード", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <% end %>
  </div>
</div>
