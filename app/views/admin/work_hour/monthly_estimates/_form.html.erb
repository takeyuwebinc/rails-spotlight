<%= form_with(model: @monthly_estimate, url: @monthly_estimate.new_record? ? admin_work_hour_project_monthly_estimates_path(@project) : admin_work_hour_project_monthly_estimate_path(@project, @monthly_estimate), class: "space-y-6") do |form| %>
  <% if @monthly_estimate.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(@monthly_estimate.errors.count, "error") %>:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc space-y-1 pl-5">
              <% @monthly_estimate.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :year_month, "対象月", class: "block text-sm font-medium text-zinc-700" %>
    <%= form.month_field :year_month, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :estimated_hours, "見込み工数（時間）", class: "block text-sm font-medium text-zinc-700" %>
    <%= form.number_field :estimated_hours, step: 0.5, min: 0, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "例: 80" %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", admin_work_hour_project_path(@project), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 hover:bg-zinc-50" %>
    <%= form.submit @monthly_estimate.new_record? ? "登録" : "更新", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
  </div>
<% end %>
