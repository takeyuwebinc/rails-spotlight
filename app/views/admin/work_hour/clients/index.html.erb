<% content_for(:title) { "クライアント一覧" } %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-zinc-900">クライアント一覧</h1>
  <%= link_to "新規作成", new_admin_work_hour_client_path, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-zinc-200">
    <thead class="bg-zinc-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase tracking-wider">コード</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase tracking-wider">名前</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 uppercase tracking-wider">案件数</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-zinc-500 uppercase tracking-wider">操作</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-zinc-200">
      <% @clients.each do |client| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-zinc-900"><%= client.code %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-zinc-900"><%= client.name %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-zinc-500"><%= client.projects.count %></td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "編集", edit_admin_work_hour_client_path(client), class: "text-indigo-600 hover:text-indigo-900 mr-4" %>
            <%= link_to "削除", admin_work_hour_client_path(client), method: :delete, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
      <% if @clients.empty? %>
        <tr>
          <td colspan="4" class="px-6 py-4 text-center text-sm text-zinc-500">クライアントがありません</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
