<%= form_with(model: @project, url: @project.new_record? ? admin_work_hour_projects_path : admin_work_hour_project_path(@project), class: "space-y-6") do |form| %>
  <% if @project.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800"><%= pluralize(@project.errors.count, "error") %>:</h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc space-y-1 pl-5">
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div>
      <%= form.label :code, "コード", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.text_field :code, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "例: abc-system" %>
    </div>

    <div>
      <%= form.label :name, "名前", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "例: ABC基幹システム" %>
    </div>

    <div>
      <%= form.label :client_id, "クライアント", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.collection_select :client_id, ::WorkHour::Client.order(:name), :id, :name, { include_blank: "選択してください" }, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :color, "カラー", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.color_field :color, class: "mt-1 block h-10 w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :start_date, "開始日", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.date_field :start_date, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :end_date, "終了日", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.date_field :end_date, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :status, "ステータス", class: "block text-sm font-medium text-zinc-700" %>
      <%= form.select :status, [["運用中", "active"], ["終了", "closed"]], {}, class: "mt-1 block w-full rounded-md border-zinc-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "キャンセル", admin_work_hour_projects_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-zinc-900 shadow-sm ring-1 ring-inset ring-zinc-300 hover:bg-zinc-50" %>
    <%= form.submit @project.new_record? ? "作成" : "更新", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
  </div>
<% end %>
