<%# スケルトンローディング: 記事カード3枚分のプレースホルダー %>
<div class="flex flex-col gap-16">
<% 3.times do %>
  <article class="group relative flex flex-col items-start animate-pulse">
    <div class="relative z-10 order-first mb-3 flex items-center pl-3.5">
      <span class="absolute inset-y-0 left-0 flex items-center" aria-hidden="true">
        <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-700"></span>
      </span>
      <div class="h-4 w-24 bg-zinc-200 dark:bg-zinc-700 rounded"></div>
    </div>
    <div class="space-y-2 w-full">
      <div class="h-5 bg-zinc-200 dark:bg-zinc-700 rounded w-full"></div>
      <div class="h-5 bg-zinc-200 dark:bg-zinc-700 rounded w-3/4"></div>
    </div>
    <div class="mt-2 space-y-1 w-full">
      <div class="h-4 bg-zinc-200 dark:bg-zinc-700 rounded w-full"></div>
      <div class="h-4 bg-zinc-200 dark:bg-zinc-700 rounded w-5/6"></div>
    </div>
    <div class="mt-4 flex items-center">
      <div class="h-4 w-20 bg-zinc-200 dark:bg-zinc-700 rounded"></div>
    </div>
  </article>
<% end %>
</div>
