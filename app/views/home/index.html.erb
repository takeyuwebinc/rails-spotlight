<% content_for :title, @seo_title %>
<% content_for :description, @seo_description %>
<% content_for :og_type, @seo_og_type %>
<% content_for :canonical_url, @seo_canonical_url %>

<!-- 構造化データ: Organization -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "タケユー・ウェブ株式会社",
  "alternateName": "TakeyuWeb Inc.",
  "url": "<%= root_url %>",
  "logo": "<%= asset_url('logo.png') %>",
  "description": "Ruby on Railsに特化したWeb開発会社",
  "sameAs": [
    "https://github.com/takeyuweb",
    "https://x.com/takeyuweb"
  ],
  "contactPoint": {
    "@type": "ContactPoint",
    "contactType": "customer service",
    "url": "<%= root_url %>contact"
  },
  "areaServed": "JP",
  "serviceType": [
    "Ruby on Rails開発",
    "Webアプリケーション開発",
    "システム設計",
    "技術コンサルティング"
  ]
}
</script>

<!-- 構造化データ: WebSite -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "タケユー・ウェブ株式会社",
  "url": "<%= root_url %>",
  "description": "Ruby on Rails受託開発専門のWeb開発会社",
  "publisher": {
    "@type": "Organization",
    "name": "タケユー・ウェブ株式会社"
  }
}
</script>

<div class="sm:px-8 mt-9">
  <div class="mx-auto w-full max-w-7xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <div class="max-w-2xl">
          <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
            Rails Engineer, Rubyist, and Full-Stack Developer
          </h1>
          <p class="mt-6 text-lg text-zinc-600 dark:text-zinc-400">
            I'm <%= link_to "Takeyu", "https://github.com/takeyuweb", class: "text-teal-500 dark:text-teal-400" %> and I'm a Rails Engineer, Rubyist, and Full-Stack Developer.
          </p>
          <% if @featured_tags.any? %>
            <div class="mt-4 flex flex-wrap gap-2">
              <% @featured_tags.each do |tag| %>
                <% colors = tag.badge_colors %>
                <%= render(BadgeComponent.new(
                  text: tag.name,
                  bg_color: colors[:bg_color],
                  text_color: colors[:text_color],
                  href: tag_articles_path(tag.slug)
                )) %>
              <% end %>
            </div>
          <% end %>
          <div class="mt-6 flex gap-6">
            <a class="group -m-1 p-1" area-label="Fllow on X" href="https://x.com/takeyuweb">
              <i class="fa-brands fa-x-twitter fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"></i>
            </a>
            <a class="group -m-1 p-1" area-label="Follow on GitHub" href="https://github.com/takeyuweb">
              <i class="fa-brands fa-github fill-zinc-500 transition group-hover:fill-zinc-600 dark:fill-zinc-400 dark:group-hover:fill-zinc-300"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mt-16 sm:mt-20">
  <div class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8">
    <div class="relative aspect-9/10 w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 sm:w-72 sm:rounded-2xl dark:bg-zinc-800 rotate-2">
      <%= image_tag "workspace.jpg", class: "absolute inset-0 w-full h-full object-cover", alt: "Workspace" %>
    </div>
    <div class="relative aspect-9/10 w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 sm:w-72 sm:rounded-2xl dark:bg-zinc-800 -rotate-2">
      <%= image_tag "omochi.jpg", class: "absolute inset-0 w-full h-full object-cover", alt: "Omochi" %>
    </div>
    <div class="relative aspect-9/10 w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 sm:w-72 sm:rounded-2xl dark:bg-zinc-800 rotate-2">
      <%= image_tag "private.jpg", class: "absolute inset-0 w-full h-full object-cover", alt: "Private" %>
    </div>
    <div class="relative aspect-9/10 w-44 flex-none overflow-hidden rounded-xl bg-zinc-100 sm:w-72 sm:rounded-2xl dark:bg-zinc-800 -rotate-2">
      <%= image_tag "rubykaigi.jpg", class: "absolute inset-0 w-full h-full object-cover", alt: "RubyKaigi" %>
    </div>
  </div>
</div>
<div class="sm:px-8 mt-24 md:mt-28">
  <div class="mx-auto w-full max-w-7xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <div class="mx-auto grid max-w-xl grid-cols-1 gap-y-20 lg:max-w-none lg:grid-cols-2">
          <div class="flex flex-col gap-16">
            <% @articles.each do |article| %>
              <article class="group relative flex flex-col items-start">
                <h2 class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100">
                  <div class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-zinc-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 sm:-inset-x-6 sm:rounded-2xl dark:bg-zinc-800/50"></div>
                  <%= link_to article_path(article) do %>
                    <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl"></span>
                    <span class="relative z-10"><%= article.title %></span>
                  <% end %>
                </h2>
                <time class="relative z-10 order-first mb-3 flex items-center text-sm text-zinc-400 dark:text-zinc-500 pl-3.5">
                  <span class="absolute inset-y-0 left-0 flex items-center" aria-hidden="true">
                    <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-500"></span>
                  </span>
                  <%= article.published_at.strftime("%Y年%m月%d日") %>
                </time>
                <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                  <%= article.description %>
                </p>
                <div aria-hidden="true" class="relative z-10 mt-4 flex items-center text-sm font-medium text-teal-500">
                  記事を読む
                  <i class="fa-solid fa-chevron-right ml-1 h-4 w-4 stroke-current"></i>
                </div>
              </article>
            <% end %>
          </div>
          <div class="space-y-10 lg:pl-16 xl:pl-24">
            <div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40 bg-zinc-50 dark:bg-zinc-800/50">
              <h2 class="flex text-sm font-semibold text-zinc-900 dark:text-zinc-100">
                <span class="h-6 w-6">
                  <i class="fa-solid fa-calendar-check"></i>
                </span>
                <span class="ml-3">Work Availability</span>
              </h2>
              <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                今後3カ月の稼働予定
              </p>
              
              <div class="mt-4 space-y-3">
                <div class="space-y-1">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-zinc-600 dark:text-zinc-400">2025年7月</span>
                    <span class="text-sm font-medium text-red-600 dark:text-red-400">100%</span>
                  </div>
                  <div class="w-full bg-zinc-200 dark:bg-zinc-700 rounded-full h-2">
                    <div class="bg-red-500 h-2 rounded-full" style="width: 100%"></div>
                  </div>
                </div>
                <div class="space-y-1">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-zinc-600 dark:text-zinc-400">2025年8月</span>
                    <span class="text-sm font-medium text-red-600 dark:text-red-400">95%</span>
                  </div>
                  <div class="w-full bg-zinc-200 dark:bg-zinc-700 rounded-full h-2">
                    <div class="bg-red-500 h-2 rounded-full" style="width: 95%"></div>
                  </div>
                </div>
                <div class="space-y-1">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-zinc-600 dark:text-zinc-400">2025年9月</span>
                    <span class="text-sm font-medium text-red-600 dark:text-red-400">95%</span>
                  </div>
                  <div class="w-full bg-zinc-200 dark:bg-zinc-700 rounded-full h-2">
                    <div class="bg-red-500 h-2 rounded-full" style="width: 95%"></div>
                  </div>
                </div>
              </div>
              
              <div class="mt-4 pt-4 border-t border-zinc-200 dark:border-zinc-700">
                <p class="text-sm text-zinc-600 dark:text-zinc-400 mb-3">
                  長期プロジェクトや今後の空き状況については、お気軽にお問い合わせください。
                </p>
                <a href="https://forms.gle/scwNEGrT196rFnD9A" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-4 py-2 bg-teal-500 hover:bg-teal-600 text-white text-sm font-medium rounded-lg transition-colors">
                  <i class="fa-solid fa-external-link mr-2"></i>
                  お問い合わせフォーム
                </a>
              </div>
            </div>
            <div class="rounded-2xl border border-zinc-100 p-6 dark:border-zinc-700/40">
              <h2 class="flex text-sm font-semibold text-zinc-900 dark:text-zinc-100">
                <span class="h-6 w-6">
                  <i class="fa-regular fa-folder-open"></i>
                </span>
                <span class="ml-3">Projects</span>
              </h2>
              <ul class="mt-6 space-y-4">
                <% @featured_projects.each do |project| %>
                  <li class="flex gap-4">
                    <div class="relative mt-1 flex h-10 w-10 flex-none items-center justify-center rounded-full ring-1 shadow-md shadow-zinc-800/5 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                      <div class="h-7 w-7 rounded-full bg-<%= project.color %> flex items-center justify-center">
                        <i class="fa-solid <%= project.icon %> text-white text-xs"></i>
                      </div>
                    </div>
                    <dl class="flex flex-auto flex-wrap gap-x-2">
                      <dt class="sr-only">Project</dt>
                      <dd class="w-full flex-none text-sm font-medium text-zinc-900 dark:text-zinc-100"><%= project.title %></dd>
                      <dt class="sr-only">Technologies</dt>
                      <dd class="text-xs text-zinc-400 dark:text-zinc-500"><%= project.technologies %></dd>
                    </dl>
                  </li>
                <% end %>
              </ul>
              <div class="mt-6 flex">
                <%= link_to projects_path, class: "flex items-center gap-2 text-sm font-medium text-teal-500 dark:text-teal-400" do %>
                  すべてのプロジェクトを見る
                  <i class="fa-solid fa-chevron-right ml-1 h-auto w-2"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
