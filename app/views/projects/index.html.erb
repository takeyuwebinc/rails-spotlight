<%# SEO Meta Tags %>
<% content_for :title, "プロジェクト一覧" %>
<% content_for :description, "これまでに手がけたプロジェクトの一覧です。Rails、Hotwire、AWSなどの技術を活用したWebアプリケーション開発の実績をご紹介します。" %>
<% content_for :canonical_url, projects_url %>

<div class="sm:px-8 mt-16 sm:mt-32">
  <div class="mx-auto w-full max-w-7xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <header class="max-w-2xl">
          <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
            Featured Projects
          </h1>
          <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
            これまでに手がけた案件の一部をご紹介します。
          </p>
        </header>
        <div class="mt-16 sm:mt-20">
          <ul role="list" class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3">
            <% @projects.each do |project| %>
              <li class="group relative flex flex-col items-start">
                <div class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                  <div class="h-8 w-8 rounded-full bg-<%= project.color %> flex items-center justify-center">
                    <i class="fa-solid <%= project.icon %> text-white"></i>
                  </div>
                </div>
                <h2 class="mt-6 text-base font-semibold text-zinc-800 dark:text-zinc-100">
                  <div class="absolute -inset-x-4 -inset-y-6 z-0 scale-95 bg-zinc-50 opacity-0 transition group-hover:scale-100 group-hover:opacity-100 sm:-inset-x-6 sm:rounded-2xl dark:bg-zinc-800/50"></div>
                  <span class="relative z-10"><%= project.title %></span>
                </h2>
                <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                  <%= project.description %>
                </p>
                <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-teal-500 dark:text-zinc-200">
                  <span class="flex items-center">
                    <i class="fa-solid fa-tag mr-1"></i>
                    <%= project.technologies %>
                  </span>
                </p>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
